<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.faceunity.fulivedemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name=".FUApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityBaseTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".FUBeautyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".FUEffectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".SelectDataActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityBaseTheme"/>
        <activity
            android:name=".ShowPhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".ShowVideoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme"/>

        <activity android:name=".Page2Activity"
            android:allowBackup="true"
            android:theme="@style/AppTheme.Skid_1"
            android:roundIcon="@mipmap/ic_launcher_round"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_090017"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/home_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x70"
        android:text="小宇宙，爆发吧"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_36"/>

    <View
        android:id="@+id/home_top_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@+id/home_top_title"
        android:layout_marginTop="@dimen/x31"
        android:background="@color/line_302D33"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_top_line"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <Button
        android:id="@+id/btn_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feed流" />
</RelativeLayout>
